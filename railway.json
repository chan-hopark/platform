{
  "build": {
    "builder": "NIXPACKS",
    "nixpacksPlan": {
      "phases": {
        "install": {
          "cmds": [
            "npm install",
            "npx playwright install chromium"
          ]
        },
        "build": {
          "cmds": [
            "npm run build"
          ]
        }
      }
    }
  },
  "deploy": {
    "startCommand": "npm start"
  },
  "environments": {
    "production": {
      "variables": {
        "NODE_ENV": "production",
        "NODE_VERSION": "18.20.5"
      }
    }
  }
}