{
  "build": {
    "builder": "NIXPACKS",
    "nixpacksPlan": {
      "phases": {
        "setup": {
          "nixPkgs": ["nodejs", "npm"]
        },
        "install": {
          "cmds": [
            "npm install",
            "npx playwright install --with-deps"
          ]
        },
        "build": {
          "cmds": []
        }
      }
    }
  },
  "start": "npm start"
}
