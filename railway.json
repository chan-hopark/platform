{
  "build": {
    "builder": "NIXPACKS",
    "nixpacksPlan": {
      "phases": {
        "install": {
          "commands": [
            "npm ci",
            "npx playwright install --with-deps"
          ]
        },
        "build": {
          "commands": [
            "npm run build"
          ]
        }
      }
    }
  },
  "deploy": {
    "startCommand": "npm start"
  }
}
