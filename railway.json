{
  "build": {
    "builder": "NIXPACKS",
    "nixpacksPlan": {
      "providers": ["nodejs"],
      "phases": {
        "setup": {
          "nixPkgs": ["nodejs_20", "npm", "nodePackages.npm"],
          "aptPkgs": ["curl", "wget"]
        },
        "install": {
          "cmds": [
            "node --version",
            "npm --version", 
            "npm ci --production=false",
            "npx playwright install chromium --with-deps"
          ]
        },
        "build": {
          "cmds": [
            "npm run build"
          ]
        }
      }
    }
  },
  "deploy": {
    "startCommand": "node --version && npm start",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "environments": {
    "production": {
      "variables": {
        "NODE_ENV": "production",
        "NODE_VERSION": "20.0.0",
        "NIXPACKS_NODE_VERSION": "20"
      }
    }
  }
}