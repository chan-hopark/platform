{
  "build": {
    "builder": "NIXPACKS",
    "nixpacksPlan": {
      "phases": {
        "setup": {
          "nixPkgs": ["nodejs_20", "npm"]
        },
        "install": {
          "cmds": [
            "npm ci",
            "npx playwright install chromium --with-deps"
          ]
        },
        "build": {
          "cmds": [
            "npm run build"
          ]
        }
      }
    }
  },
  "deploy": {
    "startCommand": "npm start",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "environments": {
    "production": {
      "variables": {
        "NODE_ENV": "production",
        "NODE_VERSION": "20.0.0"
      }
    }
  }
}